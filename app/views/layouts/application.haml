!!!
%head
  %title= defined?(title) ? "#{title} - The Philosopher Developer" : "The Philosopher Developer"
  %meta(name="viewport" content="initial-scale=1.0, width=device-width, user-scalable=no")
  %link(rel="stylesheet" href="/stylesheets/application.css")
  %link(rel="stylesheet" href="/stylesheets/pygments.css")
  - if post && post.has_custom_stylesheet?
    %link(rel="stylesheet" href="/stylesheets/#{post.identifier}.css")
  %script(type="text/javascript" src="http://w.sharethis.com/button/buttons.js")
  %script(type="text/javascript" src="/javascripts/ga.js")
  %script(type="text/javascript" src="/javascripts/shareThis.js")

%body
  %header#header
    - if post
      %h1
        %a(href="#{post.link}")= post.title
      %h2 <a href="/">the philosopher developer</a>
    - else
      %h1 <a href="/">The Philosopher Developer</a>
      %h2 half-sound logic, half-decent code

  = yield

  %footer
    %ul.menu
      %li <a href="/posts">All Posts</a>
      %li <a href="/about">About</a>
      %li
        %a(href="http://stackoverflow.com/users/105570" target="_blank")
          %img(alt="StackOverflow" src="/images/icons/stackoverflow-small.png")
      %li
        %a(href="https://github.com/dtao" target="_blank")
          %img(alt="GitHub" src="/images/icons/github-small.png")
      %li
        %a(href="https://twitter.com/dan_tao" target="_blank")
          %img(alt="Twitter" src="/images/icons/twitter-small.png")
      %li
        %a(href="http://feeds.feedburner.com/philosopherdeveloper")
          %img(alt="RSS" src="/images/icons/rss-small.png")
