- BOOTSTRAP_VERSION = "2.0.3"
- HTML5_SHIM_VERSION = "pre3.5"
- JQUERY_VERSION = "1.7.2"

%head
  %meta(charset="utf-8")
  %title The Philosopher Developer
  %meta(content="width=device-width, initial-scale=1.0" name="viewport")
  %meta(content="" name="description")
  %meta(content="" name="author")
  
  = stylesheet_link_tag("/bootstrap-#{BOOTSTRAP_VERSION}/css/bootstrap.min")
  = stylesheet_link_tag("/bootstrap-#{BOOTSTRAP_VERSION}/css/bootstrap-responsive.min")
  = stylesheet_link_tag("application")
  = yield_content :styles

  / HTML5 shim, for IE6-8 support of HTML5 elements
  / [if lt IE 9]
  = javascript_include_tag("/html5-shim-#{HTML5_SHIM_VERSION}/html5-shim.min")

%body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand(href="/") The Philosopher Developer
        .nav-collapse
          %ul.nav
            = partial :menu_items

  .container
    = yield

  / TODO: Load JavaScript assets with a script loader e.g. head.js
  = javascript_include_tag("/jquery-#{JQUERY_VERSION}/jquery.min")
  = javascript_include_tag("/bootstrap-#{BOOTSTRAP_VERSION}/js/bootstrap.min")
  = yield_content :javascripts
